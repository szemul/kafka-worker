{
    "name": "szemul/kafka-worker",
    "description": "Queue worker implementation for apache kafka",
    "license": "MIT",
    "minimum-stability": "stable",
    "require": {
        "php": "^8.1",
        "ext-rdkafka": "*",
        "nesbot/carbon": "^2.0|^3.0",
        "szemul/helper": "^1.3.0",
        "szemul/queue": "^2.0.0",
        "szemul/queue-worker": "^2.0.0"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.0.0",
        "jetbrains/phpstorm-attributes": "^1.0",
        "kwn/php-rdkafka-stubs": "^2.2",
        "mockery/mockery": "^1.0",
        "phpstan/phpstan": "^2.1.0",
        "phpunit/phpunit": "^12",
        "szemul/error-handler": "^1.0.0|^2.0.0"
    },
    "provide": {
        "szemul/queue-implementation": "1.0.0"
    },
    "autoload": {
        "psr-4": {
            "Szemul\\KafkaWorker\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Szemul\\KafkaWorker\\Test\\": "tests"
        }
    },
    "config": {
        "sort-packages": true,
        "optimize-autoloader": true
    }
}
